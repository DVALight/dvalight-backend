generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  email String @unique
  name String?
  password String

  @@map("users")
}

model Device {
  id  Int @id @default(autoincrement())
  state Boolean @default(false)
  color Int @default(16777215)

  @@map("devices")
}

